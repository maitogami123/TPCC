  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "globalSetup": "./test/setup.ts",
    "globalTeardown": "./test/teardown.ts",
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
